pipeline {
    agent {
        dockerfile {
            filename 'Dockerfile.jenkins' // CustomDockerfile 사용
        }
    }
    stages {
        stage('Test with Docker Compose') {
            steps {
                // Docker Compose 명령 실행
                sh 'docker-compose up --abort-on-container-exit'
            }
        }
    }
    post {
        always {
            // 테스트가 끝난 후 Docker Compose 다운
            sh 'docker-compose down'
        }
    }
}